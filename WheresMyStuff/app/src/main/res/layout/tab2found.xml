<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.seekers.wheresmystuff.Controller.HomeScreenActivityTab">

    <Button
        android:id="@+id/enterFoundItemsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Found"
        android:layout_marginStart="26dp"
        android:layout_below="@+id/foundItemsLabel"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/foundItemsLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Found Items"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:layout_marginTop="70dp" />

    <TextView
        android:id="@+id/foundlabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Found Items"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:layout_marginTop="190dp" />

    <Button
        android:id="@+id/viewFoundItems"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Items"
        android:layout_centerVertical="true"
        android:layout_alignEnd="@+id/enterFoundItemsButton" />

    <TextView
        android:id="@+id/foundSearchLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search Found Items"
        android:paddingBottom="10dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="130dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp" />

    <Button
        android:id="@+id/searchFoundItemsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search"
        android:layout_marginLeft="200dp"
        android:layout_below="@+id/foundSearchLabel"
        android:layout_alignStart="@+id/foundSearchLabel"
        android:layout_marginStart="35dp" />
</RelativeLayout>
